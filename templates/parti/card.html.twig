<div class="card parti-card">
    <div class="row g-0">
        <div class="col-md-3 d-flex align-items-center justify-content-center">
            <div class="logo-parti mt-2 mt-md-0">
                <img src="{{ asset('img/parti/' ~ randomParti.logo) }}" class="w-100" alt="{{ "logo de %nom%" | trans({"%nom%": randomParti.name}) }}">
            </div>
        </div>
        <div class="col-md-9">
            <div class="card-body text-start">
                <h4 class="card-title">{{ randomParti.name }}</h4>
                <hr>
                <p class="card-text">{{ "Président : " | trans }}{{ randomParti.president }}</p>
                <a href="" class="btn btn-secondary">{{ "Découvrir son activité" | trans }}</a>
            </div>
        </div>
    </div>
</div>